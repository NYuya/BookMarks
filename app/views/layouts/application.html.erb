<!DOCTYPE html>
<html>

<head>
  <title>BookMarks</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
  <script type="text/javascript">
    function disp() {
      window.alert('アラートの表示');
    }
  </script>
  <meta name="viewport" content="width=device-width,initial-scale=1.0"><!-- レスポンシブ対応設定 -->

  <meta charset="UTF-8">
  <link rel="stylesheet" href="assets/stylesheets/skippr.scss">
  <link rel="stylesheet" href="assets/stylesheets/style.scss">

</head>

<body>
  <header class="navbar navbar-fixed-top ">
    <!-- navbar-inverse -->
    <div class="container">
      <div class="navbar-header">
        <button class="navbar-toggle collapsed" type="button" data-toggle="collapse" data-target="#navbar"
          aria-expanded="false" aria-controls="navbar">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <span style="font-size:35px;"><%= link_to "BookMarks", root_path, id: "logo" %></span>
      </div>

      <nav>
        <ul id="navbar" class="nav navbar-nav navbar-right navbar-collapse collapse">
          <% if admin_signed_in? %>
          <li class="<%= 'active' if current_page?(admins_bookmarks_path) %>">
            <%= link_to ' ブックマーク一覧', admins_bookmarks_path %></li>
          <li class="<%= 'active' if current_page?(admins_customers_path) %>">
            <%= link_to ' 顧客一覧', admins_customers_path %></li>
          <li><a rel="nofollow" href="/admins/sign_out">ログアウト</a></li>
          <% elsif customer_signed_in? %>
          <li class="<%= 'active' if current_page?(root_path) %>">
            <%= link_to 'トップページ', root_path %></li>
          <li class="<%= 'active' if current_page?(current_customer)%>">
            <%= link_to 'Myブックマーク', customer_path(current_customer) %></li>
          <li class="<%= 'active' if current_page?(bookmarks_path)%>">
            <%= link_to 'みんなのブックマーク', bookmarks_path%></li>
          <li><a rel="nofollow" data-method="delete" href="/customers/sign_out">ログアウト</a></li>
          <% else %>
          <li class="<%= 'active' if current_page?(root_path) %>"><%= link_to ' トップページ', root_path %></li>
          <li><a href="/customers/sign_up">新規登録</a></li>
          <li><a href="/customers/sign_in">ログイン</a></li>
          <% end %>
        </ul>
      </nav>
    </div>
  </header>

  <main>
    <br>
    <br>
    <br>
    <br>
    <br>
    <div class="container">


      <%= yield %>
    </div>
  </main>


  <footer>
    <br>
    <br>
    <div class="container">
      <div class="search-form">
        <%= form_tag(search_path, method: :get) do %>
        <%= text_field_tag 'search[content]' %>
        <%= select_tag 'search[model]', options_for_select({"Bookmark" => "bookmark" ,"Customer" => "customer" }) %>
        <%= select_tag 'search[how]', options_for_select({ "完全一致" => "match", "部分一致" => "partical"  }) %>
        <%= submit_tag '検索', class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>
  </footer>

</body>

</html>
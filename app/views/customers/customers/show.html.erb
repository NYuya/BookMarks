<h2></h2>

<div class="row">
  <div class="col-xs-3">
    <div class="row">
      <table class="table table-hover">
        <tr>
          <%= attachment_image_tag(@customer, :customer_image, :fill, 200, 200, fallback: "no_image.jpg") %>
        </tr>
        <tr>
          <th>name</th>
          <th><%= @customer.customer_name %></th>
        </tr>
        <tr>
          <th>introduction</th>
          <th><%= @customer.customer_introduction %></th>
        </tr>
        <tr>
          <th>follows</th>
          <th><%= link_to "#{@customer.follower.count} ", followed_path(@customer.id) %></th>
        </tr>
        <tr>
          <th>followers</th>
          <th><%= link_to @customer.followed.count , follower_path(@customer.id) %></th>
        </tr>
      </table>
      <%= render "relationships/follow_button", customer: @customer %>

      <%= link_to 'プロフィール編集',edit_customer_path(@customer), class: "col-xs-8 col-xs-offset-2 text-center btn btn-default glyphicon glyphicon-wrench edit_user_#{@customer.id}" %>
    </div>
    <div class="row">
      <h4>New Folder</h4>
      <%= form_for @newfolder do |f| %>
      <div class="field row">
        <%= f.label :フォルダ新規作成 %>
        <%= f.text_field :folder_name, class: "col-xs-8 col-xs-offset-1 book_title" %>
        <%= f.submit "登録", class: "btn btn-primary col-xs-2 text-center" %>
      </div>
      <% end %>
    </div>

    <div class="row">
      <%= render "folders/folders_index", folders: @folders %>
    </div>
  </div>

  <div class="col-xs-9">
    <h3>New bookMark</h3>
    <%= form_for(@newbookmark) do |f| %>
    <div class="field row">
      <%= f.label :ブックマークするページのURLを入力してください %>
      <%= f.text_field :bookmark_url, class: "col-xs-10 book_title" %>
      <%= f.submit "登録", class: "btn btn-primary col-xs-2 text-center" %>
    </div>
    <% end %>


    <h3>BookMarks</h3>
    <table class="table table-hover table-inverse">
      <thead>
        <tr>
          <th>サイト画面</th>
          <%# <th>サムネイル画像</th> %>
          <th>Title/URL</th>
          <th>Opinion</th>
          <th colspan="3">公開状況</th>
        </tr>
      </thead>
      <tbody>
        <% @bookmarks.each do |bookmark| %>
        <tr>
          <td>
            <iframe id="inline-frame" scrolling="no" src="<%= bookmark.bookmark_url %>" width="400px" height="150px"
              sandbox>
            </iframe>
          </td>
          <!--
          <td>
            <%= attachment_image_tag bookmark, :bookmark_image, size: '200x150',format: "jpeg",fallback: "no_image.jpg" %>
          </td> 
          -->
          <td>
            <%= link_to bookmark.bookmark_name, bookmark, class: "book_#{bookmark.id}" %>
            <br>
            <%= link_to bookmark.bookmark_url do %>
            <img src="https://www.google.com/s2/favicons?domain=<%=bookmark.bookmark_url%>">
            <%end%>
            <%= link_to bookmark.bookmark_url, bookmark.bookmark_url %>
            <br>
            <br>
            <%= link_to "サイトへ GO!",bookmark.bookmark_url, class: "btn-sm btn-success edit_bookmark_#{bookmark.id}" %>
          </td>
          <td><%= bookmark.bookmark_description %></td>
          <td>
            <% if bookmark.is_bookmark_status == false %>
            <span class="text-danger">非公開中</span>
            <% else %>
            <span class="text-success">公開中</span>
            <% end %>
          </td>
          <td>
            <%= link_to "Show",bookmark_path(bookmark), class: "btn-sm btn-primary bookmark_#{bookmark.id}" %>
            <br>
            <br>
            <% if bookmark.customer == current_customer %>
            <%= link_to "Edit",edit_bookmark_path(bookmark), class: "btn-sm btn-success edit_bookmark_#{bookmark.id}" %>
            <% end %>
            <br>
            <br>
            <% if bookmark.customer == current_customer %>
            <%= link_to "Destroy",bookmark, method: :delete, data: {confirm: "本当に削除してもよろしいですか？"}, class: "btn-sm btn-danger destroy_bookmark_#{bookmark.id}" %>
            <% end %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>



  </div>


</div>
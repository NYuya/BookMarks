<h2></h2>

<div class="row">
  <div class="col-xs-3">
    <div class="row">
      <table class="table table-hover">
        <tr>
          <%= attachment_image_tag(@customer, :customer_image, :fill, 200, 200, fallback: "no_image.jpg") %>
        </tr>
        <tr>
          <th>name</th>
          <th><%= @customer.customer_name %></th>
        </tr>
        <tr>
          <th>introduction</th>
          <th><%= @customer.customer_introduction %></th>
        </tr>
        <tr>
          <th>follows</th>
          <th><%= link_to "#{@customer.follower.count} ", followed_path(@customer.id) %></th>
        </tr>
        <tr>
          <th>followers</th>
          <th><%= link_to @customer.followed.count , follower_path(@customer.id) %></th>
        </tr>
      </table>
      <%= render "relationships/follow_button", customer: @customer %>

      <%= link_to 'プロフィール編集',edit_customer_path(@customer), class: "col-xs-8 col-xs-offset-2 text-center btn btn-default glyphicon glyphicon-wrench edit_user_#{@customer.id}" %>
    </div>

    <% if current_customer != @customer %>
    <%= link_to 'chatを始める', chat_path(@customer.id)%>
    <% end %>

    <div class="row">
      <h4>New Folder</h4>
      <%= form_for @newfolder do |f| %>
      <div class="field row">
        <%= f.label :フォルダ新規作成 %>
        <%= f.text_field :folder_name, class: "col-xs-8 col-xs-offset-1 book_title" %>
        <%= f.submit "登録", class: "btn btn-primary col-xs-2 text-center" %>
      </div>
      <% end %>
    </div>

    <div class="row">
      <%= render "folders/folders_index", folders: @folders %>
    </div>
  </div>

  <div class="col-xs-9">
    <h3>New bookMark</h3>
    <%= form_for(@newbookmark) do |f| %>
    <div class="field row">
      <%= f.label :ブックマークするページのURLを入力してください %>
      <%= f.text_field :bookmark_url, class: "col-xs-10 book_title" %>
      <%= f.submit "登録", class: "btn btn-primary col-xs-2 text-center" %>
    </div>
    <% end %>

    <table class="table">
      <tr>
        <th>CSV エクスポート</th>
        <th><%= link_to "CSV", customer_path(format: :csv), class: "btn btn-primary" %></th>
      </tr>
      <tr>
        <th>CSV インポート</th>
        <th>
          <%= form_tag import_bookmarks_path, multipart: true do %>
          <%= file_field_tag :file %>
          <%= submit_tag "インポート", class: "btn btn-primary" %>
          <% end %>
        </th>
      </tr>
    </table>

    <h3>BookMarks</h3>
    <table class="table table-hover table-inverse">
      <thead>
        <tr>
          <th>サイト画面</th>
          <%# <th>サムネイル画像</th> %>
          <th>Title/URL</th>
          <th>Opinion</th>
          <th colspan="3">公開状況</th>
        </tr>
      </thead>
      <tbody>

        <% @bookmarks.each do |bookmark| %>
        <%= render "customer_bookmark_index", bookmark: bookmark %>
        <% end %>
      </tbody>
    </table>



  </div>


</div>